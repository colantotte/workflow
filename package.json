{
  "name": "lark-workflow",
  "version": "0.1.0",
  "description": "Lark Base Approval Workflow System",
  "type": "module",
  "main": "dist/firebase.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:vercel": "tsc",
    "start": "node dist/index.js",
    "deploy:firebase": "firebase deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "docker:build": "docker build -t workflow-api .",
    "docker:run": "docker run -p 8080:8080 --env-file .env workflow-api",
    "deploy": "gcloud builds submit --config cloudbuild.yaml",
    "seed": "tsx src/scripts/seed-data.ts",
    "test:workflow": "tsx src/scripts/test-workflow.ts",
    "test:notification": "tsx src/scripts/test-notification.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.1",
    "@hono/zod-validator": "^0.4.2",
    "@larksuiteoapi/node-sdk": "^1.36.0",
    "csv-parse": "^5.5.6",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "hono": "^4.6.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vercel/node": "^5.5.26",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
